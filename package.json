{
  "name": "clean-code-api",
  "version": "1.0.0",
  "main": "src/main/index.js",
  "repository": "git@github.com:acmesquita/clean-code-api.git",
  "author": "Catharina Mesquita <catha.ana.1994@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node src/main/index.js",
    "test": "jest --es-module-specifier-resolution=node --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit.config.js",
    "test:integration": "yarn test --watch -c jest-integration.config.js",
    "test:staged": "yarn test  --silent",
    "test:ci": "yarn test --coverage  --silent"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/mongodb": "^4.0.7",
    "babel-jest": "^27.2.4",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.0",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "fast-glob": "^3.2.7",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.3",
    "supertest": "^6.1.6",
    "validator": "^13.6.0"
  }
}
